
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user  %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
			<%= render 'books/show', booking: @booking %>
		<table id="comments_area_<%= @booking.id %>">
			<%= render partial: 'book_comments/index', locals: { booking: @booking } %>
		</table>
		<div id="comment_form_<%= @booking.id %>">
			<%= render partial: 'book_comments/comment', locals: { booking: @booking, book_comment: @book_comment } %>
		</div>
	</div>
</div>


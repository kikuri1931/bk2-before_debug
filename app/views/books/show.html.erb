
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user  %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr class="book_<%= @booking.id %>">
				<%= render 'books/show', booking: @booking %>
			</tr>
		</table>
		<table class="show-tb comment_<%= @booking.id %>">
			<%= render 'book_comments/index', book_comments: @booking.book_comments  %>
		</table>
		<div class="comment-form">
      		<%= form_with model:[@booking, @book_comment], data: {remote: true} do |f| %>
        		<%= f.text_area :comment, size: "90x5" %>
        		<%= f.submit '送信' %>
     		<% end %>
    	</div>
	</div>
</div>

